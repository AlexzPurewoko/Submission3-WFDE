{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "declaration": true,
        "noUnusedLocals": false,
        "module": "commonjs",
        "target": "es2018",
        "lib": ["ES2018", "DOM"],
        "jsx": "preserve",
        "allowJs": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "types": ["codeceptjs", "jasmine"]
    },
    "compileOnSave": true,
}